<% if current_user.checkfavorite?(post) %>
    <%= form_with(model: current_user.favorites.find_by(post_id: post.id), local: true, class: "d-inline text-white", method: :delete) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'unfavorite', class: "btn-warning btn-sm" %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline text-white") do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'favorite', class: "btn-info btn-sm" %>
    <% end %>
<% end %>